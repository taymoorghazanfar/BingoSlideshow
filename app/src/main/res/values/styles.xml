<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/imagepickerColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/font</item>

        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#00000000</item>
    </style>

    <style name="theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/imagepickerColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/font</item>
    </style>


    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@drawable/bg_grt_toolbar</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">#ffcc66</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
        <item name="android:height">15dp</item>
        <item name="android:width">15dp</item>
    </style>


</resources>
